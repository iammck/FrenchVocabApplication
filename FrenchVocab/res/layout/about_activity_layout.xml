<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical" >

<Button
        android:id="@+id/about_activity_back_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="backFromAboutButton"
        android:text="Back" />

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_above="@id/about_activity_back_button" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:fillViewport="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="About"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invisible"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About French Vocab"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="French Vocab was developed by the author while attending the University of Washington's summer French Intensive, French 134. The course Included courses French 101, 102, and 103. It covered units 1- 17 of the course book titled &apos; Rond-Point: Édition nord-américaine&apos;." />
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invisible"
        android:visibility="invisible" />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The application was designed to help the author practice vocabulary for each unit of the book." />
	
    

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invisible"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael King" />

    
</LinearLayout>

</ScrollView>

</RelativeLayout>
    
